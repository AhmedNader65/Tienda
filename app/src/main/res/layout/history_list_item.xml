<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />
<LinearLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_gravity="center"
    android:weightSum="3"
    android:layout_marginBottom="20dp"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
    <TextView
        android:id="@+id/points_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="30sp"
        />
            </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/type_history"
                android:src="@drawable/added_ico"
                android:gravity="left"
                android:layout_height="30dp"
                android:layout_width="30dp"
                tools:ignore="ContentDescription"/>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/logo_history"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:src="@drawable/macdonlds"
        android:layout_gravity="center"
        tools:ignore="ContentDescription"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/fromwhat_logo_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:ignore="ContentDescription"/>
        <TextView
            android:id="@+id/fromwhat_text1_history"
            android:text="John Smith"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fromwhat_text2_history"
            android:text="was invited"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />
    </LinearLayout>
    </RelativeLayout>